#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Running pre-commit checks..."

# Check if we have staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -z "$STAGED_GO_FILES" ]; then
    echo "No Go files staged for commit"
    exit 0
fi

echo -e "\n${YELLOW}Running formatter checks...${NC}"
make fmt-all

echo -e "\n${YELLOW}Running linter on all modules...${NC}"
make lint-all

echo -e "\n${YELLOW}Running tests on all modules...${NC}"
make test-all

# Check if any files were modified by formatting
MODIFIED=$(git diff --name-only)
if [ -n "$MODIFIED" ]; then
    echo -e "\n${RED}‚ùå The following files were modified by formatting:${NC}"
    echo "$MODIFIED"
    echo -e "${YELLOW}Please stage the formatting changes and commit again.${NC}"
    exit 1
fi

echo -e "\n${GREEN}‚úÖ All pre-commit checks passed!${NC}"